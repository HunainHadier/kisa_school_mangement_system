<Window x:Class="KisaSchoolMangement.Views.Student.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Student" Height="700" Width="1200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f5f5f5">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - Student Photos -->
            <StackPanel Grid.Column="0">
                <!-- Student Photo -->
                <Border BorderBrush="#ddd" BorderThickness="1" Background="White" 
                        CornerRadius="5" Padding="10" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Student Photo" FontWeight="Bold" FontSize="14" 
                                   Margin="0,0,0,10" HorizontalAlignment="Center"/>

                        <Border BorderBrush="#ccc" BorderThickness="1" Background="#f9f9f9" 
                                Height="180" CornerRadius="3" Margin="0,0,0,10">
                            <Image x:Name="imgStudentPhoto" Stretch="Uniform" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <Button x:Name="btnUploadStudentPhoto" Content="Upload Photo" 
                                Click="btnUploadStudentPhoto_Click" Height="30" 
                                Background="#2196F3" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- CNIC Photo -->
                <Border BorderBrush="#ddd" BorderThickness="1" Background="White" 
                        CornerRadius="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="CNIC Photo" FontWeight="Bold" FontSize="14" 
                                   Margin="0,0,0,10" HorizontalAlignment="Center"/>

                        <Border BorderBrush="#ccc" BorderThickness="1" Background="#f9f9f9" 
                                Height="180" CornerRadius="3" Margin="0,0,0,10">
                            <Image x:Name="imgCnicPhoto" Stretch="Uniform" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <Button x:Name="btnUploadCnicPhoto" Content="Upload CNIC" 
                                Click="btnUploadCnicPhoto_Click" Height="30" 
                                Background="#2196F3" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Column - Form Fields -->
            <StackPanel Grid.Column="2">
                <!-- Main Form in Tabs -->
                <TabControl>
                    <!-- Basic Information Tab -->
                    <TabItem Header="Basic Information">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="450">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Added one more row -->
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- GR Number -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="GR Number *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtGrNo" 
                                         Height="35" Margin="0,0,0,10"/>

                                <!-- Student Name -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Student Name *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtStudentName" 
                                         Height="35" Margin="0,0,0,10"/>

                                <!-- Date of Birth -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Date of Birth *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <DatePicker Grid.Row="3" Grid.Column="0" x:Name="dpDOB" 
                                             Height="35" Margin="0,0,0,10"/>

                                <!-- Gender -->
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="Gender *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox Grid.Row="3" Grid.Column="2" x:Name="cmbGender" 
                                          Height="35" Margin="0,0,0,10">
                                    <ComboBoxItem Content="Male" IsSelected="True"/>
                                    <ComboBoxItem Content="Female"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>

                                <!-- Class -->
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Class *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox Grid.Row="5" Grid.Column="0" x:Name="cmbClass" 
                                          Height="35" Margin="0,0,0,10" 
                                          DisplayMemberPath="Name" SelectedValuePath="Id"/>

                                <!-- Section -->
                                <TextBlock Grid.Row="4" Grid.Column="2" Text="Section *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox Grid.Row="5" Grid.Column="2" x:Name="cmbSection" 
                                          Height="35" Margin="0,0,0,10" 
                                          DisplayMemberPath="Name" SelectedValuePath="Id"/>

                                <!-- Admission Date -->
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Admission Date *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <DatePicker Grid.Row="7" Grid.Column="0" x:Name="dpAdmissionDate" 
                                             Height="35" Margin="0,0,0,10"/>

                                <!-- Admission Year -->
                                <TextBlock Grid.Row="6" Grid.Column="2" Text="Admission Year *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="7" Grid.Column="2" x:Name="txtAdmissionYear" 
                                         Height="35" Margin="0,0,0,10"/>

                                <!-- Admission Class -->
                                <TextBlock Grid.Row="8" Grid.Column="0" Text="Admission Class" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="9" Grid.Column="0" x:Name="txtAdmissionClass" 
                                         Height="35" Margin="0,0,0,10"/>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Family Information Tab -->
                    <TabItem Header="Family Information">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="450">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Father Name -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Father Name *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtFatherName" 
                                         Height="35" Margin="0,0,0,10"/>

                                <!-- Family Code -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Family Code *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtFamilyCode" 
                                         Height="35" Margin="0,0,0,10"/>

                                <!-- District Code -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="District Code *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="0" x:Name="txtDistrictCode" 
                                         Height="35" Margin="0,0,0,10"/>

                                <!-- Syed/Non-Syed -->
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="Syed/Non-Syed *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox Grid.Row="3" Grid.Column="2" x:Name="cmbSyed" 
                                          Height="35" Margin="0,0,0,10">
                                    <ComboBoxItem Content="Syed" IsSelected="True"/>
                                    <ComboBoxItem Content="Non-Syed"/>
                                </ComboBox>

                                <!-- Family Members -->
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Family Members *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="5" Grid.Column="0" x:Name="txtFamilyMembers" 
                                         Height="35" Margin="0,0,0,10" Text="1"/>

                                <!-- Child Position -->
                                <TextBlock Grid.Row="4" Grid.Column="2" Text="Child Position *" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="5" Grid.Column="2" x:Name="txtChildPosition" 
                                         Height="35" Margin="0,0,0,10" Text="1"/>

                                <!-- Student Category -->
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Student Category" 
                                           FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox Grid.Row="7" Grid.Column="0" x:Name="cmbStudentCategory" 
                                          Height="35" Margin="0,0,0,10">
                                    <ComboBoxItem Content="-- Select Category --"/>
                                    <ComboBoxItem Content="orphan"/>
                                    <ComboBoxItem Content="needy"/>
                                    <ComboBoxItem Content="shaheed"/>
                                </ComboBox>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>

                    <!-- CNIC & Contact Tab -->
                    <TabItem Header="CNIC / Contact">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="450">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Child CNIC -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Child CNIC Number" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtChildCNIC" 
                     Height="35" Margin="0,0,0,10"/>

                                <!-- Father CNIC -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Father CNIC" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtFatherCNIC" 
                     Height="35" Margin="0,0,0,10"/>

                                <!-- Father Occupation -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Father Occupation" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="0" x:Name="txtFatherOccupation" 
                     Height="35" Margin="0,0,0,10"/>

                                <!-- Father Income -->
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="Father Monthly Income" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="2" x:Name="txtFatherIncome" 
                     Height="35" Margin="0,0,0,10" Text="0"/>

                                <!-- Mother Name -->
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Mother Name" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="5" Grid.Column="0" x:Name="txtMotherName" 
                     Height="35" Margin="0,0,0,10"/>

                                <!-- Mother CNIC -->
                                <TextBlock Grid.Row="4" Grid.Column="2" Text="Mother CNIC" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="5" Grid.Column="2" x:Name="txtMotherCNIC" 
                     Height="35" Margin="0,0,0,10"/>

                                <!-- Mother Income -->
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Mother Monthly Income" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="7" Grid.Column="0" x:Name="txtMotherIncome" 
                     Height="35" Margin="0,0,0,10" Text="0"/>

                                <!-- Guardian Name -->
                                <TextBlock Grid.Row="6" Grid.Column="2" Text="Guardian Name *" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="7" Grid.Column="2" x:Name="txtGuardianName" 
                     Height="35" Margin="0,0,0,10"/>

                                <!-- Guardian Phone -->
                                <TextBlock Grid.Row="8" Grid.Column="0" Text="Guardian Phone *" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="9" Grid.Column="0" x:Name="txtGuardianPhone" 
                     Height="35" Margin="0,0,0,10"/>

                                <!-- Mother Phone -->
                                <TextBlock Grid.Row="8" Grid.Column="2" Text="Mother Phone" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="9" Grid.Column="2" x:Name="txtMotherPhone" 
                     Height="35" Margin="0,0,0,10"/>

                                <!-- Mother WhatsApp -->
                                <TextBlock Grid.Row="10" Grid.Column="0" Text="Mother WhatsApp" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="11" Grid.Column="0" x:Name="txtMotherWhatsapp" 
                     Height="35" Margin="0,0,0,10"/>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Additional Information Tab -->
                    <!-- Additional Information Tab -->
                    <TabItem Header="Additional Info">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="450">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Home Status -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Home Status" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox Grid.Row="1" Grid.Column="0" x:Name="cmbHomeStatus" 
                      Height="35" Margin="0,0,0,15">
                                    <ComboBoxItem Content="-- Select Status --"/>
                                    <ComboBoxItem Content="owner"/>
                                    <ComboBoxItem Content="combined"/>
                                    <ComboBoxItem Content="rent"/>
                                </ComboBox>

                                <!-- Address -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Address *" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtAddress" 
                     Height="60" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" 
                     Margin="0,0,0,15"/>

                                <!-- Scholarship Information -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Scholarship Reason" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="0" x:Name="txtScholarshipReason" 
                     Height="60" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" 
                     Margin="0,0,0,15"/>

                                <!-- Monthly Fee -->
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="Monthly Fee" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="2" x:Name="txtMonthlyFee" 
                     Height="35" Margin="0,0,0,15" Text="0"/>

                                <!-- Left Information Section -->
                                <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" 
                    BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
                    Margin="0,10,0,0" Padding="0,10,0,0">
                                    <TextBlock Text="Leaving Information (Optional)" 
                           FontWeight="Bold" FontSize="14" 
                           Foreground="#424242"/>
                                </Border>

                                <!-- Left Month -->
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Left Month" 
                       FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <TextBox Grid.Row="6" Grid.Column="0" x:Name="txtLeftMonth" 
                     Height="35" Margin="0,0,0,15"/>

                                <!-- Left Date -->
                                <TextBlock Grid.Row="5" Grid.Column="2" Text="Left Date" 
                       FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <DatePicker Grid.Row="6" Grid.Column="2" x:Name="dpLeftDate" 
                         Height="35" Margin="0,0,0,15"/>

                                <!-- Left Reason -->
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Left Reason" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" 
                     x:Name="txtLeftReason" 
                     Height="60" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" 
                     Margin="0,0,0,15"/>

                                <!-- Status -->
                                <TextBlock Grid.Row="9" Grid.Column="0" Text="Status" 
                       FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox Grid.Row="10" Grid.Column="0" x:Name="cmbStatus" 
                      Height="35" Margin="0,0,0,15">
                                    <ComboBoxItem Content="active" IsSelected="True"/>
                                    <ComboBoxItem Content="inactive"/>
                                    <ComboBoxItem Content="left"/>
                                    <ComboBoxItem Content="graduated"/>
                                </ComboBox>

                                <!-- Active Status Checkbox -->
                                <CheckBox Grid.Row="9" Grid.Column="2" Grid.RowSpan="2"
                      x:Name="chkIsActive" 
                      Content="Active Student" IsChecked="True" 
                      FontWeight="SemiBold" Margin="0,0,0,15"
                      VerticalAlignment="Center"/>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>


                </TabControl>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Save" Click="btnSave_Click" Width="120" Height="40" 
                            Margin="10" Background="#4CAF50" Foreground="White" 
                            FontWeight="Bold" FontSize="14"/>
                    <Button Content="Cancel" Click="btnCancel_Click" Width="100" Height="40" 
                            Margin="10" Background="#f44336" Foreground="White" 
                            FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>