<Window x:Class="KisaSchoolMangement.Views.Auth.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KisaSchoolMangement.Views.Auth"
        mc:Ignorable="d"
        Title="Kisa School - Login" 
        WindowStyle="None"
        AllowsTransparency="True"
        Height="500" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- Main Grid with Full Background -->
    <Grid>
        <!-- Full Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4a90e2" Offset="0"/>
                <GradientStop Color="#357ae8" Offset="0.5"/>
                <GradientStop Color="#2c5aa0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Close Button (Top Right) -->
        <Button x:Name="btnClose" 
                Content="✕" 
                Width="30" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="10"
                Background="Transparent" 
                Foreground="White"
                FontSize="14"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="btnClose_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#ff4444"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Main Login Container -->
        <Border Background="White" 
                CornerRadius="20" 
                Width="800" 
                Height="450"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                BorderThickness="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="30" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left side - Branding Section -->
                <Border Background="#4a90e2" 
                        CornerRadius="20,0,0,20"
                        Grid.Column="0" Margin="0,-24,0,-19">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                            <Border Background="White" 
                                    CornerRadius="15" 
                                    Width="120" 
                                    Height="120"
                                    HorizontalAlignment="Center"
                                    Margin="0 0 0 30">
                                <Image Source="/Assets/Images/Schoollogo.png" 
                                       Width="100" 
                                       Height="100"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="/Assets/Images/Schoollogo.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Source, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                                                    <Setter Property="Source" Value="/Assets/Images/Schoollogo.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Border>

                            <TextBlock Text="Kisa Model School" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0 20 0 0"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                            <TextBlock Text="Manage Your System" 
                                       FontSize="16" 
                                       Foreground="#e3f2fd"
                                       HorizontalAlignment="Center"
                                       Margin="0 10 0 0"
                                       TextAlignment="Center"/>

                            <!-- Additional Info -->
                            <TextBlock Text="Secure Login Portal" 
                                       FontSize="12" 
                                       Foreground="#cce0ff"
                                       HorizontalAlignment="Center"
                                       Margin="0 30 0 0"
                                       TextAlignment="Center"
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Right side - Login Form -->
                <Border Grid.Column="1" Padding="40" Background="White" CornerRadius="0,20,20,0" Margin="0,-24,-40,-19">
                    <StackPanel VerticalAlignment="Center">
                        <!-- Header -->
                        <StackPanel Margin="0 0 0 20">
                            <TextBlock Text="Welcome Back!" 
                                       FontSize="26" 
                                       FontWeight="Bold" 
                                       Foreground="#333" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Sign in to your account" 
                                       FontSize="14" 
                                       Foreground="#666" 
                                       Margin="0 5 0 0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Username Field -->
                        <StackPanel Margin="0 0 0 25">
                            <TextBlock Text="Username" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Foreground="#555" 
                                       Margin="0 0 0 8"/>

                            <Border BorderThickness="1" 
                                    BorderBrush="#ddd" 
                                    Background="#f8f9fa" 
                                    CornerRadius="8"
                                    Height="45">
                                <TextBox x:Name="txtUsername" 
                                         Padding="12" 
                                         FontSize="14"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         Foreground="#333"/>
                            </Border>
                        </StackPanel>

                        <!-- Password Field -->
                        <StackPanel Margin="0 0 0 25">
                            <TextBlock Text="Password" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Foreground="#555" 
                                       Margin="0 0 0 8"/>

                            <Border BorderThickness="1" 
                                    BorderBrush="#ddd" 
                                    Background="#f8f9fa" 
                                    CornerRadius="8"
                                    Height="45">
                                <PasswordBox x:Name="txtPassword" 
                                             Padding="12" 
                                             FontSize="14"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             VerticalContentAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- Remember Me and Forgot Password -->
                        <Grid Margin="0 15 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="cbRememberMe" 
                                      Content="Remember me" 
                                      FontSize="12" 
                                      Foreground="#555"
                                      VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" 
                                       Text="Forgot password?" 
                                       FontSize="12" 
                                       Foreground="#4a90e2"
                                       VerticalAlignment="Center"
                                       Cursor="Hand">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#357ae8"/>
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <!-- Login Button -->
                        <!-- Login Button - YEH LINE CHANGE KAREN -->
                        <Button x:Name="LoginButton" 
        Content="Sign In" 
        Background="#4a90e2" 
        Foreground="White"
        FontWeight="SemiBold" 
        FontSize="15"
        Margin="0 30 0 0" 
        Height="48"
        BorderThickness="0"
        Cursor="Hand"
        Click="LoginButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                    Background="{TemplateBinding Background}" 
                    CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#357ae8"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#2c5aa0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <!-- Message Label -->
                        <TextBlock x:Name="lblMessage" 
                                   Foreground="#e74c3c" 
                                   FontSize="12"
                                   Margin="0 15 0 0" 
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>