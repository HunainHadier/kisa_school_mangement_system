<Window x:Class="KisaSchoolMangement.Views.User.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f5f5f5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Reset Password" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- User Info -->
        <TextBlock Grid.Row="1" Text="{Binding UserInfo}" 
                   FontSize="14" HorizontalAlignment="Center" 
                   Foreground="#666" Margin="0,0,0,20"/>

        <!-- New Password -->
        <TextBlock Grid.Row="2" Text="New Password *" 
                   FontWeight="SemiBold" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="3" x:Name="txtNewPassword" 
                     Height="35" Margin="0,0,0,10"/>

        <!-- Confirm Password -->
        <TextBlock Grid.Row="4" Text="Confirm Password *" 
                   FontWeight="SemiBold" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="5" x:Name="txtConfirmPassword" 
                     Height="35" Margin="0,0,0,20"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Reset" Click="btnReset_Click" 
                    Width="100" Height="35" Background="#4CAF50" 
                    Foreground="White" FontWeight="Bold"/>
            <Button Content="Cancel" Click="btnCancel_Click" 
                    Width="100" Height="35" Background="#f44336" 
                    Foreground="White" Margin="15,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>