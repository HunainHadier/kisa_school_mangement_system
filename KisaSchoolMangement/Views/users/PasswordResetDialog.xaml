<Window x:Class="KisaSchoolMangement.Views.User.PasswordResetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Reset Password" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="User:" FontWeight="SemiBold"/>
        <TextBlock Grid.Row="1" x:Name="txtUserName" Margin="50,0,0,0"/>

        <TextBlock Grid.Row="2" Text="New Password:" FontWeight="SemiBold" Margin="0,10,0,5"/>
        <PasswordBox Grid.Row="2" x:Name="txtNewPassword" Margin="0,0,0,10" Height="30"/>

        <TextBlock Grid.Row="3" Text="Confirm Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="3" x:Name="txtConfirmPassword" Height="30"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Reset" Click="btnReset_Click" Width="80" Height="30" 
                    Background="#4CAF50" Foreground="White" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="btnCancel_Click" Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>