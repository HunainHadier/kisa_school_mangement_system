<Window x:Class="KisaSchoolMangement.Views.User.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit User" 
        Height="550" 
        Width="750"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="CanResizeWithGrip"
        Background="#f5f5f5"
        WindowStyle="SingleBorderWindow">

    <Grid>
        <!-- Main ScrollViewer -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#4A6CF7" CornerRadius="8" 
                        Padding="15" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="White" Width="36" Height="36" CornerRadius="18"
                                VerticalAlignment="Center" Margin="0,0,15,0">
                            <TextBlock Text="👤" FontSize="18" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel>
                            <TextBlock x:Name="txtTitle" Text="Add New User" 
                                       FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Fill in the user details below" 
                                       FontSize="13" Foreground="#E3F2FD"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Form Fields -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="25"
                        BorderBrush="#ddd" BorderThickness="1">

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Username -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Username *" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,15,10" 
                                       VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                                <TextBox x:Name="txtUsername" 
                                         Height="38" 
                                         Padding="10"
                                         FontSize="14"
                                         BorderBrush="#ccc" 
                                         BorderThickness="1"/>
                                <TextBlock Text="Username must be unique" 
                                           FontSize="11" 
                                           Foreground="#666" 
                                           Margin="5,2,0,0"/>
                            </StackPanel>

                            <!-- Password (only for new users) -->
                            <TextBlock x:Name="lblPassword" Grid.Row="1" Grid.Column="0" 
                                       Text="Password *" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,15,10" 
                                       VerticalAlignment="Center"/>
                            <StackPanel x:Name="passwordPanel" Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                                <PasswordBox x:Name="txtPassword" 
                                             Height="38" 
                                             Padding="10"
                                             FontSize="14"
                                             BorderBrush="#ccc" 
                                             BorderThickness="1"
                                             PasswordChanged="txtPassword_PasswordChanged"/>
                                <TextBlock Text="Minimum 6 characters" 
                                           FontSize="11" 
                                           Foreground="#666" 
                                           Margin="5,2,0,0"/>
                            </StackPanel>

                            <!-- Confirm Password -->
                            <TextBlock x:Name="lblConfirmPassword" Grid.Row="2" Grid.Column="0" 
                                       Text="Confirm Password *" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,15,10" 
                                       VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                                <PasswordBox x:Name="txtConfirmPassword" 
                                             Height="38" 
                                             Padding="10"
                                             FontSize="14"
                                             BorderBrush="#ccc" 
                                             BorderThickness="1"
                                             PasswordChanged="txtConfirmPassword_PasswordChanged"/>
                                <TextBlock x:Name="txtPasswordMatch" 
                                           Text="Passwords must match" 
                                           FontSize="11" 
                                           Foreground="#666" 
                                           Margin="5,2,0,0"/>
                            </StackPanel>

                            <!-- Full Name -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Full Name *" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,15,10" 
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                     x:Name="txtFullName" 
                                     Height="38" 
                                     Padding="10"
                                     FontSize="14"
                                     BorderBrush="#ccc" 
                                     BorderThickness="1"
                                     Margin="0,0,0,10"/>

                            <!-- Email -->
                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       Text="Email" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,15,10" 
                                       VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                                <TextBox x:Name="txtEmail" 
                                         Height="38" 
                                         Padding="10"
                                         FontSize="14"
                                         BorderBrush="#ccc" 
                                         BorderThickness="1"/>
                                <TextBlock Text="Optional - for notifications" 
                                           FontSize="11" 
                                           Foreground="#666" 
                                           Margin="5,2,0,0"/>
                            </StackPanel>

                            <!-- Phone -->
                            <TextBlock Grid.Row="5" Grid.Column="0" 
                                       Text="Phone" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,15,10" 
                                       VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                                <TextBox x:Name="txtPhone" 
                                         Height="38" 
                                         Padding="10"
                                         FontSize="14"
                                         BorderBrush="#ccc" 
                                         BorderThickness="1"/>
                                <TextBlock Text="Optional - for contact" 
                                           FontSize="11" 
                                           Foreground="#666" 
                                           Margin="5,2,0,0"/>
                            </StackPanel>

                            <!-- Role -->
                            <TextBlock Grid.Row="6" Grid.Column="0" 
                                       Text="Role *" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,15,10" 
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="6" Grid.Column="1" 
                                      x:Name="cmbRole" 
                                      Height="38" 
                                      Padding="5"
                                      FontSize="14"
                                      BorderBrush="#ccc" 
                                      BorderThickness="1"
                                      Margin="0,0,0,10"/>

                            <!-- Is Active -->
                            <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                                    Background="#FFF3E0" 
                                    CornerRadius="6" 
                                    Padding="15" 
                                    Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <CheckBox x:Name="chkIsActive" 
                                              Content="Active User" 
                                              IsChecked="True" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="Inactive users cannot login" 
                                               FontSize="12" 
                                               Foreground="#666" 
                                               Margin="15,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Action Buttons -->
                <Border Grid.Row="2" Background="White" CornerRadius="8" 
                        Padding="15" Margin="0,15,0,0"
                        BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="❌ Cancel" 
                                Click="btnCancel_Click" 
                                Width="110" 
                                Height="40" 
                                Background="#9E9E9E" 
                                Foreground="White" 
                                FontWeight="SemiBold" 
                                FontSize="14"
                                BorderThickness="0" 
                                Cursor="Hand"
                                Margin="0,0,10,0"/>

                        <Button Content="💾 Save User" 
                                x:Name="btnSave" 
                                Click="btnSave_Click" 
                                Width="130" 
                                Height="42" 
                                Background="#4CAF50" 
                                Foreground="White" 
                                FontWeight="Bold" 
                                FontSize="14"
                                BorderThickness="0" 
                                Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>