<Window x:Class="KisaSchoolMangement.Views.User.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="👥 User Management - Kisa School"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="10" CornerRadius="8"
                BorderBrush="#ddd" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#4A6CF7" Width="40" Height="40" CornerRadius="8"
                            VerticalAlignment="Center" Margin="0,0,15,0">
                        <TextBlock Text="👥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="User Management" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock Text="Manage system users and permissions" FontSize="14" Foreground="#666"/>
                    </StackPanel>
                </StackPanel>

                <!-- Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#E8F5E9" CornerRadius="6" Padding="10" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👥" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <StackPanel>
                                <TextBlock x:Name="txtTotalUsers" Text="0" FontSize="18" FontWeight="Bold" Foreground="#2E7D32"/>
                                <TextBlock Text="Total Users" FontSize="11" Foreground="#666"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#E3F2FD" CornerRadius="6" Padding="10" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✓" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <StackPanel>
                                <TextBlock x:Name="txtActiveUsers" Text="0" FontSize="18" FontWeight="Bold" Foreground="#1565C0"/>
                                <TextBlock Text="Active" FontSize="11" Foreground="#666"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#FFEBEE" CornerRadius="6" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✗" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <StackPanel>
                                <TextBlock x:Name="txtInactiveUsers" Text="0" FontSize="18" FontWeight="Bold" Foreground="#C62828"/>
                                <TextBlock Text="Inactive" FontSize="11" Foreground="#666"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" Margin="10" CornerRadius="8"
                BorderBrush="#ddd" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search and Filter -->
                <Border Grid.Row="0" Background="#FAFAFA" Padding="15" BorderBrush="#eee" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox x:Name="txtSearch" Width="300" Height="35" Padding="10" 
                                     FontSize="14" BorderBrush="#ccc" BorderThickness="1"
                                     TextChanged="txtSearch_TextChanged"/>
                            <Button Content="🔍 Search" Click="btnSearch_Click" 
                                    Background="#607D8B" Foreground="White" FontWeight="SemiBold"
                                    Height="35" Padding="15,0" Margin="10,0,0,0" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>

                        <!-- Filter Options -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <ComboBox x:Name="cmbRoleFilter" Width="150" Height="35" Margin="0,0,10,0"
                                      FontSize="14" SelectionChanged="cmbRoleFilter_SelectionChanged">
                                <ComboBoxItem Content="All Roles" IsSelected="True"/>
                                <ComboBoxItem Content="Admin"/>
                                <ComboBoxItem Content="Teacher"/>
                                <ComboBoxItem Content="Accountant"/>
                                <ComboBoxItem Content="Clerk"/>
                            </ComboBox>
                            <ComboBox x:Name="cmbStatusFilter" Width="120" Height="35"
                                      FontSize="14" SelectionChanged="cmbStatusFilter_SelectionChanged">
                                <ComboBoxItem Content="All Status" IsSelected="True"/>
                                <ComboBoxItem Content="Active"/>
                                <ComboBoxItem Content="Inactive"/>
                            </ComboBox>
                            <Button Content="➕ Add User" Click="btnAddUser_Click" 
                                    Background="#4CAF50" Foreground="White" FontWeight="SemiBold"
                                    Height="35" Padding="15,0" Margin="10,0,0,0" BorderThickness="0" Cursor="Hand"/>
                            <Button Content="🔄 Refresh" Click="btnRefresh_Click" 
                                    Background="#2196F3" Foreground="White" FontWeight="SemiBold"
                                    Height="35" Padding="15,0" Margin="10,0,0,0" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Users DataGrid -->
                <DataGrid x:Name="dgUsers" Grid.Row="1" 
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          SelectionMode="Single" SelectionChanged="dgUsers_SelectionChanged"
                          FontSize="13" RowHeight="35" BorderThickness="0"
                          HeadersVisibility="Column">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="120"/>
                        <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding RoleName}" Width="100"/>

                        <DataGridTemplateColumn Header="Status" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="6,2" 
                                            Background="{Binding StatusColor}">
                                        <TextBlock Text="{Binding Status}" Foreground="White" 
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Created By" Binding="{Binding CreatedByName}" Width="100"/>
                        <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="140"/>

                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="✏️" Tag="{Binding Id}" Click="btnEditUser_Click" 
                                                Background="#FFC107" Foreground="White" Padding="8,4" 
                                                BorderThickness="0" Margin="2" Cursor="Hand"
                                                FontSize="12" ToolTip="Edit User"/>
                                        <Button Content="🔑" Tag="{Binding Id}" Click="btnResetPassword_Click" 
                                                Background="#2196F3" Foreground="White" Padding="8,4" 
                                                BorderThickness="0" Margin="2" Cursor="Hand"
                                                FontSize="12" ToolTip="Reset Password"/>
                                        <Button Content="❌" Tag="{Binding Id}" Click="btnDeleteUser_Click" 
                                                Background="#F44336" Foreground="White" Padding="8,4" 
                                                BorderThickness="0" Margin="2" Cursor="Hand"
                                                FontSize="12" ToolTip="Delete User"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderBrush" Value="#f0f0f0"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f8f9fa"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#e3f2fd"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>