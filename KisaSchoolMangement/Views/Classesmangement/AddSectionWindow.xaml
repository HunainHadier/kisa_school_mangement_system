<Window x:Class="KisaSchoolMangement.Views.Section.AddSectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Section" Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Class Selection -->
        <TextBlock Grid.Row="0" Text="Select Class *" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="1" x:Name="cmbClass" Height="30" DisplayMemberPath="Name" 
                  SelectedValuePath="Id" Margin="0,0,0,15"/>

        <!-- Section Name -->
        <TextBlock Grid.Row="2" Text="Section Name *" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" x:Name="txtName" Height="30" Margin="0,0,0,15"/>

        <!-- Capacity -->
        <TextBlock Grid.Row="4" Text="Capacity" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" x:Name="txtCapacity" Height="30" Text="30" Margin="0,0,0,15"/>

        <!-- Spacer -->
        <Rectangle Grid.Row="6" Fill="Transparent" Height="20"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Click="btnSave_Click" Width="80" Height="30" Margin="5" Background="#FF008000" Foreground="White"/>
            <Button Content="Cancel" Click="btnCancel_Click" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>