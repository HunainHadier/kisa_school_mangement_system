<Window x:Class="KisaSchoolMangement.Views.Dashboard.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Kisa School Management System"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#f5f6fa"
        Closing="Window_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2c3e50" BorderBrush="#34495e" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- User Info and Logout Button -->
                <Border Grid.Row="0" Background="#34495e" Padding="15" BorderBrush="#2c3e50" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- User Info -->
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtUserName" 
                                       Text="Welcome, User" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="White" 
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock x:Name="txtUserRole" 
                                       Text="Role" 
                                       FontSize="11" 
                                       Foreground="#bdc3c7" 
                                       Margin="0,3,0,0"/>
                        </StackPanel>

                        <!-- Logout Button -->
                        <Button Grid.Column="1" 
                                Content="🚪" 
                                ToolTip="Logout"
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0"
                                FontSize="16"
                                Width="35" 
                                Height="35"
                                Click="btnLogout_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#e74c3c"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Logo/Header -->
                <Border Grid.Row="1" Background="#34495e" Padding="20" BorderBrush="#2c3e50" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="🏫 Kisa School" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Management System" 
                                   FontSize="11" 
                                   Foreground="#bdc3c7" 
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="10">
                    <StackPanel>
                        <!-- Dashboard -->
                        <Border Background="#34495e" CornerRadius="8" Margin="0,0,0,5">
                            <Button Content="📊 Dashboard" 
                                    Background="Transparent" 
                                    Foreground="White" 
                                    BorderThickness="0"
                                    Padding="15,12"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    HorizontalContentAlignment="Left"/>
                        </Border>

                        <!-- 👥 USER MANAGEMENT SECTION ADD HERE 👇 -->
                        <Expander Header="👥 User Management" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Margin="0,5,0,5"
                                  IsExpanded="False">
                            <StackPanel Margin="10,5,0,5">
                                <Button Content="➕ Add New User" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="AddUser_Click"/>
                                <Button Content="📋 Manage Users" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManageUsers_Click"/>
                                <Button Content="👑 User Roles" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManageRoles_Click"/>
                                <Button Content="🔐 User Permissions" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManagePermissions_Click"/>
                            </StackPanel>
                        </Expander>
                        <!-- 👆 USER MANAGEMENT SECTION ENDS HERE -->

                        <!-- Student Management -->
                        <Expander Header="👨‍🎓 Student Management" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Margin="0,5,0,5">
                            <StackPanel Margin="10,5,0,5">
                                <Button Content="➕ Add Student" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="AddStudent_Click"/>
                                <Button Content="📋 Manage Students" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManageStudents_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Teacher Management -->
                        <Expander Header="👨‍🏫 Teacher Management" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Margin="0,5,0,5">
                            <StackPanel Margin="10,5,0,5">
                                <Button Content="📋 Manage Teachers" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="Teachermanage_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Class Management -->
                        <Expander Header="🏫 Class Management" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Margin="0,5,0,5">
                            <StackPanel Margin="10,5,0,5">
                                <Button Content="➕ Add Class" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="AddClass_Click"/>
                                <Button Content="📚 Manage Classes" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManageClasses_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Section Management -->
                        <Expander Header="📖 Section Management" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Margin="0,5,0,5">
                            <StackPanel Margin="10,5,0,5">
                                <Button Content="➕ Add Section" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="AddSection_Click"/>
                                <Button Content="📋 Manage Sections" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManageSections_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Exam Management -->
                        <Expander Header="📝 Exam Management" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Margin="0,5,0,5">
                            <StackPanel Margin="10,5,0,5">
                                <Button Content="➕ Add Exam" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="AddExam_Click"/>
                                <Button Content="📊 Manage Exams" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManageExams_Click"/>
                                <Button Content="📚 Exam Subjects" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManageExamSubjects_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Donor Management -->
                        <Expander Header="🤝 Donor Management" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Margin="0,5,0,5">
                            <StackPanel Margin="10,5,0,5">
                                <Button Content="➕ Add Donor" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="AddDonor_Click"/>
                                <Button Content="💰 Manage Donors" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManageDonors_Click"/>
                                <Button Content="Student With Donors" 
             Background="Transparent" 
             Foreground="#ecf0f1" 
             BorderThickness="0"
             Padding="15,10"
             FontSize="12"
             HorizontalContentAlignment="Left"
             Click="ViewDonerwithStudents_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- Quick Actions -->
                        <Expander Header="⚡ Quick Actions" 
                                  Foreground="White" 
                                  FontWeight="SemiBold"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Margin="0,5,0,5">
                            <StackPanel Margin="10,5,0,5">
                                <Button Content="💰 Collect Fee" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="CollectFee_Click"/>
                                <Button Content="📅 Mark Attendance" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="MarkAttendance_Click"/>
                                <Button Content="📝 Enter Marks" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="EnterMarks_Click"/>
                                <Button Content="👥 View Assignments" 
                                        Background="Transparent" 
                                        Foreground="#ecf0f1" 
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        HorizontalContentAlignment="Left"
                                        Click="ManageAssignments_Click"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer with Logout Button -->
                <Border Grid.Row="3" Background="#34495e" Padding="15" BorderBrush="#2c3e50" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <!-- Logout Button Big Version -->
                        <Button Content="🚪 Logout" 
                                Click="btnLogout_Click" 
                                Background="Transparent" 
                                Foreground="#e74c3c" 
                                BorderThickness="1" 
                                BorderBrush="#e74c3c"
                                Padding="10,5"
                                FontSize="12"
                                FontWeight="SemiBold"
                                HorizontalContentAlignment="Center"
                                Margin="0,0,0,10">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#e74c3c"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <TextBlock Text="🚀 Version 1.0" 
                                   FontSize="10" 
                                   Foreground="#bdc3c7" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Developed with ❤️" 
                                   FontSize="9" 
                                   Foreground="#95a5a6" 
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Time and Date -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="📊 Dashboard" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#2c3e50"/>
                        <TextBlock Text="Welcome to Kisa School Management System" 
                                   FontSize="14" 
                                   Foreground="#7f8c8d" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Time and Date -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock x:Name="txtCurrentTime" 
                                   Text="00:00:00" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#2c3e50"/>
                        <TextBlock x:Name="txtCurrentDate" 
                                   Text="Monday, 01 January 2024" 
                                   FontSize="12" 
                                   Foreground="#7f8c8d" 
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <!-- Statistics Cards - Updated with User Statistics -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding Statistics}" Margin="0,0,0,20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding Color}" 
                                    CornerRadius="12" 
                                    Width="180" 
                                    Height="120" 
                                    Margin="0,0,15,15"
                                    Padding="15"
                                    BorderThickness="0">
                                <StackPanel>
                                    <TextBlock Text="{Binding Count}" 
                                               FontSize="32" 
                                               FontWeight="Bold" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="14" 
                                               Foreground="White" 
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="11" 
                                               Foreground="#e0e0e0" 
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Recent Activities & System Overview -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recent Activities -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="12" 
                            BorderThickness="1" 
                            BorderBrush="#e0e0e0" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="📈 Recent Activities" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50" 
                                       Margin="0,0,0,15"/>

                            <ItemsControl ItemsSource="{Binding RecentActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="12" Margin="0,0,0,8" Background="#f8f9fa" CornerRadius="8">
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="10" Height="10" Fill="#3498db" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Activity}" 
                                                               FontSize="12" 
                                                               FontWeight="SemiBold"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Time}" 
                                                               FontSize="10" 
                                                               Foreground="#7f8c8d" 
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- System Overview - Updated with Users Info -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            CornerRadius="12" 
                            BorderThickness="1" 
                            BorderBrush="#e0e0e0" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="🏫 System Overview" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50" 
                                       Margin="0,0,0,15"/>

                            <StackPanel Margin="0,10,0,0">
                                <!-- Users Summary -->
                                <Border Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="👥" FontSize="18" VerticalAlignment="Center"/>
                                        <StackPanel Margin="15,0,0,0">
                                            <TextBlock Text="System Users" FontSize="13" FontWeight="SemiBold" Foreground="#7f8c8d"/>
                                            <TextBlock Text="{Binding TotalUsers}" FontSize="16" FontWeight="Bold" Foreground="#8e44ad"/>
                                        </StackPanel>
                                        <Button Content="Manage" 
                                                Background="#8e44ad" 
                                                Foreground="White" 
                                                BorderThickness="0"
                                                Padding="10,5"
                                                FontSize="11"
                                                VerticalAlignment="Center"
                                                Margin="30,0,0,0"
                                                Click="QuickManageUsers_Click"/>
                                    </StackPanel>
                                </Border>

                                <!-- Classes Summary -->
                                <Border Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🏫" FontSize="18" VerticalAlignment="Center"/>
                                        <StackPanel Margin="15,0,0,0">
                                            <TextBlock Text="Classes" FontSize="13" FontWeight="SemiBold" Foreground="#7f8c8d"/>
                                            <TextBlock Text="{Binding TotalClasses}" FontSize="16" FontWeight="Bold" Foreground="#9b59b6"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Sections Summary -->
                                <Border Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📖" FontSize="18" VerticalAlignment="Center"/>
                                        <StackPanel Margin="15,0,0,0">
                                            <TextBlock Text="Sections" FontSize="13" FontWeight="SemiBold" Foreground="#7f8c8d"/>
                                            <TextBlock Text="{Binding TotalSections}" FontSize="16" FontWeight="Bold" Foreground="#e67e22"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Students Summary -->
                                <Border Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="👨‍🎓" FontSize="18" VerticalAlignment="Center"/>
                                        <StackPanel Margin="15,0,0,0">
                                            <TextBlock Text="Students" FontSize="13" FontWeight="SemiBold" Foreground="#7f8c8d"/>
                                            <TextBlock Text="{Binding TotalStudents}" FontSize="16" FontWeight="Bold" Foreground="#3498db"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Teachers Summary -->
                                <Border Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="👨‍🏫" FontSize="18" VerticalAlignment="Center"/>
                                        <StackPanel Margin="15,0,0,0">
                                            <TextBlock Text="Teachers" FontSize="13" FontWeight="SemiBold" Foreground="#7f8c8d"/>
                                            <TextBlock Text="{Binding TotalTeachers}" FontSize="16" FontWeight="Bold" Foreground="#e74c3c"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Exams Summary -->
                                <Border Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📝" FontSize="18" VerticalAlignment="Center"/>
                                        <StackPanel Margin="15,0,0,0">
                                            <TextBlock Text="Exams" FontSize="13" FontWeight="SemiBold" Foreground="#7f8c8d"/>
                                            <TextBlock Text="{Binding TotalExams}" FontSize="16" FontWeight="Bold" Foreground="#2ecc71"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Donors Summary -->
                                <Border Background="#f8f9fa" CornerRadius="8" Padding="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🤝" FontSize="18" VerticalAlignment="Center"/>
                                        <StackPanel Margin="15,0,0,0">
                                            <TextBlock Text="Donors" FontSize="13" FontWeight="SemiBold" Foreground="#7f8c8d"/>
                                            <TextBlock Text="{Binding TotalDonors}" FontSize="16" FontWeight="Bold" Foreground="#f39c12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>