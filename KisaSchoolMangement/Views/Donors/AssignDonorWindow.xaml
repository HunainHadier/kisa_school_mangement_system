<Window x:Class="KisaSchoolMangement.Views.Donors.AssignDonorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Donor to Student" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Donor Information -->
        <GroupBox Grid.Row="0" Header="Selected Donor Information" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock x:Name="txtDonorInfo" FontWeight="SemiBold" TextWrapping="Wrap" LineHeight="20"/>
            </StackPanel>
        </GroupBox>

        <!-- Student Selection -->
        <GroupBox Grid.Row="1" Header="Select Student *" Margin="0,0,0,10">
            <ComboBox x:Name="cmbStudents" Height="30" DisplayMemberPath="StudentName"
                      SelectedValuePath="Id" Margin="5"/>
        </GroupBox>

        <!-- Amount -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Amount *" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" x:Name="txtAmount" Height="30" Text="0"/>
        </Grid>

        <!-- Dates -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                <TextBlock Text="Start Date *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpStartDate" Height="30"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <TextBlock Text="End Date" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpEndDate" Height="30"/>
            </StackPanel>
        </Grid>

        <!-- Notes -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Notes" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Grid.Row="1" x:Name="txtNote" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Assign" Click="BtnAssign_Click" Width="100" Height="35" Margin="5" 
                    Background="#FF008000" Foreground="White" FontWeight="SemiBold"/>
            <Button Content="Cancel" Click="BtnCancel_Click" Width="80" Height="35" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>