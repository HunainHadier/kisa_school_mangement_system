<Window x:Class="KisaSchoolMangement.Views.Donors.DonorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Donor Management" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form Section -->
        <GroupBox Grid.Row="0" Header="Donor Information" Margin="10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Column 1 -->
                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="Name *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtName" Height="30" Margin="0,2,0,10"/>

                    <TextBlock Text="Contact Person" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtContactPerson" Height="30" Margin="0,2,0,10"/>

                    <TextBlock Text="Email" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEmail" Height="30" Margin="0,2,0,10"/>
                </StackPanel>

                <!-- Column 2 -->
                <StackPanel Grid.Column="2" Margin="5">
                    <TextBlock Text="Phone *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPhone" Height="30" Margin="0,2,0,10"/>

                    <TextBlock Text="WhatsApp Number" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtWhatsApp" Height="30" Margin="0,2,0,10"/>

                    <TextBlock Text="Monthly Amount" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtMonthlyAmount" Height="30" Margin="0,2,0,10" Text="0"/>
                </StackPanel>

                <!-- Column 3 -->
                <StackPanel Grid.Column="4" Margin="5">
                    <TextBlock Text="Address" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtAddress" Height="60" TextWrapping="Wrap" Margin="0,2,0,10"/>

                    <TextBlock Text="Notes" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtNotes" Height="60" TextWrapping="Wrap" Margin="0,2,0,10"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- DataGrid Section -->
        <DataGrid x:Name="dgDonors" Grid.Row="1" Margin="10" AutoGenerateColumns="False"
                  SelectionChanged="dgDonors_SelectionChanged" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Contact Person" Binding="{Binding ContactPerson}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding ContactNumber}" Width="100"/>
                <DataGridTextColumn Header="WhatsApp" Binding="{Binding WhatsAppNumber}" Width="100"/>
                <DataGridTextColumn Header="Monthly Amount" Binding="{Binding MonthlyAmount, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add" Click="Add_Click" Margin="5" Width="80" Height="35" Background="#2196F3" Foreground="White"/>
            <Button Content="Update" Click="Update_Click" Margin="5" Width="80" Height="35" Background="#FF9800" Foreground="White"/>
            <Button Content="Delete" Click="Delete_Click" Margin="5" Width="80" Height="35" Background="#f44336" Foreground="White"/>
            <Button Content="Refresh" Click="Refresh_Click" Margin="5" Width="80" Height="35" Background="#607D8B" Foreground="White"/>
            <Button Content="Assign Donor" Click="AssignDonor_Click" Margin="5" Width="120" Height="35" Background="#4CAF50" Foreground="White" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>