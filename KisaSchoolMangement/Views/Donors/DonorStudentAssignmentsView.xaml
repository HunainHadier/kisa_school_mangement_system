<Window x:Class="KisaSchoolMangement.Views.Donors.DonorStudentAssignmentsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Donor-Student Assignments" Height="700" Width="1200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="🎯 Donor-Student Assignments" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2c3e50"/>
            <TextBlock Text="Manage all donor assignments to students with complete details" 
                       FontSize="12" 
                       Foreground="#7f8c8d" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Statistics Cards -->
        <WrapPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Border Background="#3498db" CornerRadius="8" Width="180" Height="80" Margin="0,0,10,10" Padding="15">
                <StackPanel>
                    <TextBlock Text="{Binding TotalAssignments}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Total Assignments" FontSize="12" Foreground="White" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#27ae60" CornerRadius="8" Width="180" Height="80" Margin="0,0,10,10" Padding="15">
                <StackPanel>
                    <TextBlock Text="{Binding ActiveAssignments}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Active Assignments" FontSize="12" Foreground="White" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#e67e22" CornerRadius="8" Width="180" Height="80" Margin="0,0,10,10" Padding="15">
                <StackPanel>
                    <TextBlock Text="{Binding TotalAmount}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Total Amount" FontSize="12" Foreground="White" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#e74c3c" CornerRadius="8" Width="180" Height="80" Margin="0,0,10,10" Padding="15">
                <StackPanel>
                    <TextBlock Text="{Binding ExpiredAssignments}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Expired Assignments" FontSize="12" Foreground="White" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </WrapPanel>

        <!-- Search and Filter Section -->
        <Border Grid.Row="2" Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox x:Name="txtSearch" Width="300" Height="35" Padding="10" 
                             TextChanged="txtSearch_TextChanged"
                             ToolTip="Search by student name, donor name, class, etc.">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#f8f9fa"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <ComboBox x:Name="cmbSearchField" Width="150" Height="35" Margin="10,0,0,0" SelectedIndex="0">
                        <ComboBoxItem Content="All Fields"/>
                        <ComboBoxItem Content="Student Name"/>
                        <ComboBoxItem Content="Donor Name"/>
                        <ComboBoxItem Content="Class"/>
                        <ComboBoxItem Content="Admission No"/>
                        <ComboBoxItem Content="Status"/>
                    </ComboBox>
                </StackPanel>

                <!-- Status Filter -->
                <ComboBox Grid.Column="1" x:Name="cmbStatusFilter" Width="120" Height="35" Margin="10,0,0,0"
                          SelectionChanged="cmbStatusFilter_SelectionChanged">
                    <ComboBoxItem Content="All Status" IsSelected="True"/>
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Expired"/>
                </ComboBox>

                <!-- Date Filter -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0,0,0">
                    <DatePicker x:Name="dpFromDate" Width="120" Height="35" ToolTip="From Date"/>
                    <TextBlock Text="to" VerticalAlignment="Center" Margin="5,0,5,0"/>
                    <DatePicker x:Name="dpToDate" Width="120" Height="35" ToolTip="To Date"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button Content="🔍 Search" Click="btnSearch_Click" Width="80" Height="35" 
                            Background="#3498db" Foreground="White" Margin="0,0,5,0"/>
                    <Button Content="🔄 Clear" Click="btnClear_Click" Width="80" Height="35" 
                            Background="#95a5a6" Foreground="White" Margin="0,0,5,0"/>
                    <Button Content="📊 Export" Click="btnExport_Click" Width="80" Height="35" 
                            Background="#27ae60" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="3" x:Name="dgAssignments" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single"
                  SelectionChanged="dgAssignments_SelectionChanged"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <!-- Student Information -->
                <DataGridTextColumn Header="Student" Binding="{Binding StudentName}" Width="150"/>
                <DataGridTextColumn Header="Admission No" Binding="{Binding StudentAdmissionNo}" Width="100"/>
                <DataGridTextColumn Header="Class" Binding="{Binding StudentClassName}" Width="100"/>
                <DataGridTextColumn Header="Section" Binding="{Binding StudentSectionName}" Width="80"/>
                <DataGridTextColumn Header="Guardian" Binding="{Binding StudentGuardianName}" Width="120"/>

                <!-- Donor Information -->
                <DataGridTextColumn Header="Donor" Binding="{Binding DonorName}" Width="120"/>
                <DataGridTextColumn Header="Contact" Binding="{Binding DonorContactPerson}" Width="120"/>
                <DataGridTextColumn Header="Donor Phone" Binding="{Binding DonorPhone}" Width="100"/>

                <!-- Assignment Details -->
                <DataGridTextColumn Header="Amount" Binding="{Binding AmountFormatted}" Width="80"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Active">
                                    <Setter Property="Foreground" Value="#27ae60"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Expired">
                                    <Setter Property="Foreground" Value="#e74c3c"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Notes -->
                <DataGridTextColumn Header="Notes" Binding="{Binding Note}" Width="200"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="Expired">
                            <Setter Property="Background" Value="#fff5f5"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="➕ New Assignment" Click="btnNewAssignment_Click" Width="140" Height="40" 
                    Background="#27ae60" Foreground="White" FontWeight="SemiBold" Margin="5"/>
            <Button Content="✏️ Edit Assignment" Click="btnEditAssignment_Click" Width="140" Height="40" 
                    Background="#3498db" Foreground="White" FontWeight="SemiBold" Margin="5"/>
            <Button Content="🗑️ Remove Assignment" Click="btnRemoveAssignment_Click" Width="160" Height="40" 
                    Background="#e74c3c" Foreground="White" FontWeight="SemiBold" Margin="5"/>
            <Button Content="👁️ View Details" Click="btnViewDetails_Click" Width="120" Height="40" 
                    Background="#9b59b6" Foreground="White" FontWeight="SemiBold" Margin="5"/>
            <Button Content="🔄 Refresh" Click="btnRefresh_Click" Width="100" Height="40" 
                    Background="#95a5a6" Foreground="White" FontWeight="SemiBold" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>